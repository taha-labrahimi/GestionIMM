@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<!doctype html>
<html lang="en">
<head>
	<title>Login 04</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

	<link rel="stylesheet" href="~/LK/css/style.css">
	<div class="img" style="background-image: url('../images/bg1.png');">
	</div>

</head>
<body>
	<section class="ftco-section">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-12 col-lg-10">
					<div class="wrap d-md-flex">
						<div class="img" style="background-image: url(/LK/images/logo-png.png);">
						</div>
						<div class="login-wrap p-4 p-md-5">
							<div class="d-flex">
								<div class="w-100">
									<h3 class="mb-4">Sign In</h3>

									<form id="account" method="post" class="mx-auto">
										<div class="form-group mb-3">
											<label class="label" for="Email">Username</label>
											<input asp-for="Input.Email" class="form-control" placeholder="Username" autocomplete="username" aria-required="true"/>
										</div>
										<div class="form-group mb-3">
											<label class="label" for="password">Password</label>
											<input asp-for="Input.Password" class="form-control" placeholder="Password" autocomplete="current-password" aria-required="true" />
										</div>
										<div class="form-group">
											<button type="submit" class="form-control btn btn-primary rounded submit px-3">Login</button>
										</div>
										<div class="form-group d-md-flex">
											<div class="w-50 text-left">
												<label class="checkbox-wrap checkbox-primary mb-0">
													Remember Me
													<input type="checkbox" checked>
													<span class="checkmark"></span>
												</label>
											</div>
											
										</div>
									</form>
									<p class="text-center">Not a member? <a data-toggle="tab" asp-controller="Home" asp-action="">Go Back</a></p>
								</div>
							</div>
						</div>
					</div>
				</div>
	</section>

	<script src="~/LK/js/jquery.min.js"></script>
	<script src="~/LK/js/popper.js"></script>
	<script src="~/LK/js/bootstrap.min.js"></script>
	<script src="~/LK/js/main.js"></script>

</body>
</html>
