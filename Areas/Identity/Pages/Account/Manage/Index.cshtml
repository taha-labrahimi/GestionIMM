@page
@model IndexModel
@{
	ViewData["Title"] = "Modifier votre profil";
}
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>RegistrationForm_v6 by Colorlib</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<!-- MATERIAL DESIGN ICONIC FONT -->
	<link rel="stylesheet" href="~/FM/fonts/material-design-iconic-font/css/material-design-iconic-font.min.css">

	<!-- STYLE CSS -->
	<link rel="stylesheet" href="~/FM/css/style.css">
</head>
@{
	var isAdmin = User.IsInRole("Administrateur");

}

<body>

	<div class="wrapper">
		<div class="inner">
			<div class="image-holder">
				<img src="~/FM/images/profile-img.jpg" alt="">
			</div>
			<form id="profileForm" method="post">
				<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
				<div class="form-row">

					<input asp-for="Input.Username" class="form-control" placeholder="Username" />
					<span asp-validation-for="Input.Username" class="text-danger"></span>
					<input asp-for="Input.FirstName" class="form-control" placeholder="Prénom" />
					<span asp-validation-for="Input.FirstName" class="text-danger"></span>

				</div><br /><br />

				<div class="form-row">

					<input asp-for="Input.LastName" class="form-control" placeholder="Nom" />
					<span asp-validation-for="Input.LastName" class="text-danger"></span>
					<input asp-for="Input.Email" class="form-control" placeholder="Email" />
					<span asp-validation-for="Input.Email" class="text-danger"></span>
				</div><br /><br />
				<!-- Champ nom -->
				@if (isAdmin)
				{
					<div class="form-row">
						<select asp-for="Input.Role" class="form-control" asp-items="Model.RoleSelectList">
							<option value="">Sélectionnez un rôle</option>
						</select><br />
						<span asp-validation-for="Input.Role" class="text-danger"></span>
					</div>

				}

				<br /><br />
				<!-- Other form fields -->
				<!-- ... (rest of your form fields) -->

				<button style="background:  #161A30; color: white;">
					Modify
					<i class="zmdi zmdi-long-arrow-right"></i>
				</button>
			</form>


		</div>
	</div>

	<script src="~/FM/js/jquery-3.3.1.min.js"></script>
	<script src="~/FM/js/main.js"></script>
</body><!-- This templates was made by Colorlib (https://colorlib.com) -->
</html>