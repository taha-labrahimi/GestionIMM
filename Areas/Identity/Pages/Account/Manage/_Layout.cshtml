@using GestionIMM.Models
@using Microsoft.AspNetCore.Identity
@inject SignInManager<Utilisateur> SignInManager
<!DOCTYPE html>

<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>@ViewData["Title"] - VotreSiteWeb</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Favicons -->
    <link href="~/assets/img/favicon.png" rel="icon">
    <link href="~/assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="~/assets/css/style.css" rel="stylesheet">
</head>

<body>
    <!-- ======= Mobile nav toggle button ======= -->
    <i class="bi bi-list mobile-nav-toggle d-xl-none"></i>

    <!-- ======= Header ======= -->
    <header id="header">
        <div class="d-flex flex-column">



            <nav id="navbar" class="nav-menu navbar">


                @if (SignInManager.IsSignedIn(User))
                {
                    <div class="profile">
                        <img src="~/assets/img/profile-img.jpg" alt="" class="img-fluid rounded-circle">

                        <h1 class="text-light">
                            <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                                <span class="bi bi-person-circle"></span>
                                @User.Identity?.Name!
                            </a>
                        </h1>
                    </div>
                    <div class="sidebar">
                        <ul>
                            <li><a asp-area="" asp-controller="Clients" asp-action="Index" class="nav-link scrollto"><i class="bi bi-people"></i><span> Clients</span></a></li>
                            <li>
                                <a asp-area="" asp-controller="Proprietes" asp-action="Index" class="nav-link scrollto"><i class="bi bi-building"></i> <span>Proprietes</span></a>
                            </li>
                            <li>
                                <a asp-area="" asp-controller="TransactionVentes" asp-action="Index" class="nav-link scrollto"><i class="bi bi-currency-exchange"></i><span> Transaction Ventes</span></a>
                            </li>
                            <li><a asp-area="" asp-controller="ContratLocations" asp-action="Index" class="nav-link scrollto"><i class="bi bi-file-earmark-text"></i><span> Contrat Locations</span></a></li>
                        </ul>
                        @if (User.IsInRole("Administrateur"))
                        {
                            <li><a asp-area="" asp-controller="Users" asp-action="" class="nav-link scrollto"><i class="bi bi-people"></i> <span>Utilisateur</span></a></li>
                        }


                        <li>
                        <li>
                            <a asp-page="/Identity/Account/Logout" onclick="event.preventDefault(); document.getElementById('logout-form').submit();" class="nav-link scrollto"><i class="bi bi-box-arrow-right"></i><span> Logout</span></a>
                            <form id="logout-form" action="/Identity/Account/Logout" method="post" style="display: none;">
                                <!-- Antiforgery token might be required depending on your setup -->
                                    @Html.AntiForgeryToken()
                            </form>
                        </li></li>

                    </div>
                }
                @if (!SignInManager.IsSignedIn(User))
                {
                    <div class="d-flex flex-column">



                        <nav id="navbar" class="nav-menu navbar">
                            <ul>
                                <li><a asp-controller="Home" asp-action="" class="nav-link scrollto active"><i class="bx bx-home"></i> <span>Home</span></a></li>

                                <li> <a class="nav-link scrollto" asp-area="Identity" asp-page="/Account/Login"><i class="bx bx-envelope"></i><span>Login</span></a></li>
                            </ul>
                        </nav><!-- .nav-menu -->
                    </div>
                }

            </nav><!-- .nav-menu -->
        </div>
    </header><!-- End Header -->

    <main id="main">
        <!-- Inclure la vue partielle pour le contenu spécifique à chaque page ici -->
        @RenderBody()
    </main><!-- End #main -->

    <footer id="footer">
        <!-- Votre pied de page ici -->
        <div class="container">
            &copy; 2024 - GestionImm
        </div>
    </footer><!-- End Footer -->

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
    <script src="~/assets/vendor/purecounter/purecounter_vanilla.js"></script>
    <script src="~/assets/vendor/aos/aos.js"></script>
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/assets/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="~/assets/vendor/typed.js/typed.umd.js"></script>
    <script src="~/assets/vendor/waypoints/noframework.waypoints.js"></script>
    <script src="~/assets/vendor/php-email-form/validate.js"></script>

    <!-- Template Main JS File -->
    <script src="~/assets/js/main.js"></script>

    @RenderSection("Scripts", required: false)
</body>

</html>
