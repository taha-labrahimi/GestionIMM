@page
@model RegisterModel
@{
    ViewData["Title"] = "Ajouter un utilisateur";
}

<!-- Styles CSS copiés et adaptés de la vue "Créer TransactionVente" -->
<style>
    body {
        background-color: #FBF9F1; /* New background color */
    }

    .btn-custom {
        background-color: #92C7CF; /* New button color */
        border-color: #92C7CF;
    }

        .btn-custom:hover {
            background-color: #7DA8AF; /* Slightly darker on hover */
            border-color: #7DA8AF;
        }

    .link-custom {
        color: #92C7CF; /* New link color */
    }

    .form-row {
        margin-bottom: 20px; /* Space between each line */
    }

    .form-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    /* Additional styling for form elements */
    .form-content .form-items {
        background-color: #FBF9F1; /* White background for form */
        border-radius: 10px;
        border: 3px solid #E5E1DA;
        padding: 20px;
        margin-bottom: 20px;
    }


    .form-content .form-items {
        width: 80%;
        border: 1px solid #CCCCCC;
        margin: auto;
        margin-top: 30px;
    }

    /* Add any additional styling here */
</style>

<div class="container mt-5">
    <h1 class="text-center">Ajouter un utilisateur</h1>

<div class="row">
    <div class="col-md-12">
        <div class="form-content">
            <div class="form-items">
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        
                        <!-- Champ prénom -->
                        <div class="form-floating mb-3">
                            <input asp-for="Input.FirstName" class="form-control" autocomplete="username" aria-required="true" maxlength="100" minlength="1" />
                            <label asp-for="Input.FirstName">Prénom</label>
                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                        </div>

                        <!-- Champ nom -->
                        <div class="form-floating mb-3">
                            <input asp-for="Input.LastName" class="form-control" autocomplete="username" aria-required="true" maxlength="100" minlength="1" />
                            <label asp-for="Input.LastName">Nom</label>
                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                        </div>

                        <!-- Champ email -->
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <!-- Sélecteur de rôle -->
                        <div class="form-group">
                            <label asp-for="Input.Role" class="control-label"></label>
                            <select asp-for="Input.Role" class="form-control">
                                <option>Administrateur</option>
                                <option>AgentImmobilier</option>
                            </select><br />
                            <span asp-validation-for="Input.Role" class="text-danger"></span>
                        </div>

                        <!-- Champ mot de passe -->
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password">Mot de passe</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <!-- Champ confirmation du mot de passe -->
                        <div class="form-floating mb-3">
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.ConfirmPassword">Confirmez le mot de passe</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <!-- Bouton de soumission -->
                        <button id="registerSubmit" type="submit" class="w-100 btn btn-custom">Ajouter</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
