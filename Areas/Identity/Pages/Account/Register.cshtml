@page
@model RegisterModel
@{
	ViewData["Title"] = "Ajouter un utilisateur";
}

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>RegistrationForm_v6 by Colorlib</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<!-- MATERIAL DESIGN ICONIC FONT -->
	<link rel="stylesheet" href="~/FM/fonts/material-design-iconic-font/css/material-design-iconic-font.min.css">

	<!-- STYLE CSS -->
	<link rel="stylesheet" href="~/FM/css/style.css">
</head>

<body>

	<div class="wrapper">
		<div class="inner">
			<div class="image-holder">
				<img src="~/FM/images/admin.jpeg" alt="">
			</div>
			<form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
				<hr />
				<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
				<br /><br />
				<!-- Champ prénom -->
				<div class="form-row">
					<input asp-for="Input.FirstName" class="form-control" autocomplete="username" placeholder="First Name" />
					<span asp-validation-for="Input.FirstName" class="text-danger"></span>

					<input asp-for="Input.LastName" class="form-control" autocomplete="username" placeholder="Last Name" />
					<span asp-validation-for="Input.LastName" class="text-danger"></span>
				</div><br /><br />

				<div class="form-row">

					<input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="Email : name@example.com" />
					<span asp-validation-for="Input.Email" class="text-danger"></span>

					<select asp-for="Input.Role" class="form-control">
						<option>Administrateur</option>
						<option>AgentImmobilier</option>
					</select><br />
					<span asp-validation-for="Input.Role" class="text-danger"></span>
				</div><br /><br />
				<!-- Champ email -->

				<div class="form-row">

					<input asp-for="Input.Password" class="form-control" autocomplete="new-password" placeholder="Password" />
					<span asp-validation-for="Input.Password" class="text-danger"></span>

					<input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" placeholder="Comfirm Password" />
					<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
				</div><br /><br />

				<button style="background:  #161A30; color: white;">
					Create
					<i class="zmdi zmdi-long-arrow-right"></i>
				</button>
			</form>

		</div>
	</div>

	<script src="~/FM/js/jquery-3.3.1.min.js"></script>
	<script src="~/FM/js/main.js"></script>
</body><!-- This templates was made by Colorlib (https://colorlib.com) -->
</html>