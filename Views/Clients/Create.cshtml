@model GestionIMM.Models.Client

@{
    ViewData["Title"] = "Create";
}
<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<title>RegistrationForm_v6 by Colorlib</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">

		<!-- MATERIAL DESIGN ICONIC FONT -->
		<link rel="stylesheet" href="~/FM/fonts/material-design-iconic-font/css/material-design-iconic-font.min.css">
		
		<!-- STYLE CSS -->
	<link rel="stylesheet" href="~/FM/css/style.css">
	</head>

	<body>

		<div class="wrapper">
			<div class="inner">
				<div class="image-holder">
				<img src="~/FM/images/Client.png" alt="">
				</div>
				<form asp-action="Create">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				
					<!-- Row for Nom and Prenom -->
					<div class="form-row">
							<input asp-for="Nom" class="form-control" placeholder="First Name"/>
							<span asp-validation-for="Nom" class="text-danger"></span>
					<input asp-for="Prenom" class="form-control" placeholder="Last Name" />
							<span asp-validation-for="Prenom" class="text-danger"></span>
				</div> <br /><br />
				
					<!-- Other form fields -->
					<div class="form-row">
					<input asp-for="NumeroTelephone" class="form-control" placeholder="Phone Number" />
							<span asp-validation-for="NumeroTelephone" class="text-danger"></span>
					<input asp-for="Adresse" class="form-control" placeholder="Adresse" />
							<span asp-validation-for="Adresse" class="text-danger"></span>
					</div>
					<br /><br />
				
					<div class="form-row">
							<select asp-for="Type" class="form-control">
								<option value="" disabled selected>Choose Your Role</option>
								<option>Acheteur</option>
								<option>Vendeur</option>
								<option>Locataire</option>
							</select>
							<span asp-validation-for="Type" class="text-danger"></span>
						</div>
				<br /><br />
					<!-- Other form fields -->
					<!-- ... (rest of your form fields) -->

				<button style="background:  #161A30; color: white;">
					Create
					<i class="zmdi zmdi-long-arrow-right"></i>
				</button>
				</form>
				
				
			</div>
		</div>

	<script src="~/FM/js/jquery-3.3.1.min.js"></script>
	<script src="~/FM/js/main.js"></script>
	</body><!-- This templates was made by Colorlib (https://colorlib.com) -->
</html>