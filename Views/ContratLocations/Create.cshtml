@model GestionIMM.Models.ContratLocation

@{
    ViewData["Title"] = "Create";
}

<!-- Include Bootstrap CSS -->
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">

<style>
    body {
        background-color: #FBF9F1; /* New background color */
    }

    .btn-custom {
        background-color: #92C7CF; /* New button color */
        border-color: #92C7CF;
    }

        .btn-custom:hover {
            background-color: #7DA8AF; /* Slightly darker on hover */
            border-color: #7DA8AF;
        }

    .link-custom {
        color: #92C7CF; /* New link color */
    }

    .form-row {
        margin-bottom: 20px; /* Space between each line */
    }

    .form-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .form-content .form-items {
        background-color: #FBF9F1; /* White background for form */
        border-radius: 10px;
        border: 3px solid #E5E1DA;
        padding: 20px;
        margin-bottom: 20px;
        width: 80%;
        margin: auto;
        margin-top: 30px;
    }
</style>

<h1>Create ContratLocation</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <div class="form-content">
            <div class="form-items">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <!-- Form fields for ContratLocation -->
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="ProprieteId" class="control-label"></label>
                            <select asp-for="ProprieteId" class="form-control" asp-items="ViewBag.ProprieteId"></select>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="LocataireId" class="control-label"></label>
                            <select asp-for="LocataireId" class="form-control" asp-items="ViewBag.LocataireId"></select>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="DateDebut" class="control-label"></label>
                            <input asp-for="DateDebut" class="form-control" />
                            <span asp-validation-for="DateDebut" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="DateFin" class="control-label"></label>
                            <input asp-for="DateFin" class="form-control" />
                            <span asp-validation-for="DateFin" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="PaiementMensuel" class="control-label"></label>
                            <input asp-for="PaiementMensuel" class="form-control" />
                            <span asp-validation-for="PaiementMensuel" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6 form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="Disponibilite" /> @Html.DisplayNameFor(model => model.Disponibilite)
                            </label>
                        </div>
                    </div>

                    <div class="form-footer">
                        <a asp-action="Index" class="link-custom">Back to List</a>
                        <input type="submit" value="Create" class="btn btn-custom" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
