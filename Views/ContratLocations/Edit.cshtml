@model GestionIMM.Models.ContratLocation

@{
    ViewData["Title"] = "Edit";
}


<!-- Include Bootstrap CSS -->
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>RegistrationForm_v6 by Colorlib</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- MATERIAL DESIGN ICONIC FONT -->
    <link rel="stylesheet" href="~/FM/fonts/material-design-iconic-font/css/material-design-iconic-font.min.css">

    <!-- STYLE CSS -->
    <link rel="stylesheet" href="~/FM/css/style.css">
</head>

<body>
    <div class="wrapper">
        <div class="inner">
            <div class="image-holder">
                <img src="~/FM/images/loc.png" alt="">
            </div>
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                <!-- Form fields for ContratLocation -->
                <div class="form-row">
                    <select asp-for="ProprieteId" class="form-control" asp-items="ViewBag.ProprieteId"></select>

                    <select asp-for="LocataireId" class="form-control" asp-items="ViewBag.LocataireId"></select>
                </div><br /><br />

                <div class="form-row">

                    <input asp-for="DateDebut" class="form-control" />
                    <span asp-validation-for="DateDebut" class="text-danger"></span>
                    <input asp-for="DateFin" class="form-control" />
                    <span asp-validation-for="DateFin" class="text-danger"></span>
                </div><br /><br />

                <div class="form-row">
                    <input asp-for="PaiementMensuel" class="form-control" type="number" placeholder="Paiment" />
                    <span asp-validation-for="PaiementMensuel" class="text-danger"></span>
                </div><br /><br />

                <button style="background:  #161A30; color: white;">
                    Modify
                    <i class="zmdi zmdi-long-arrow-right"></i>
                </button>
            </form>


        </div>
    </div>

    <script src="~/FM/js/jquery-3.3.1.min.js"></script>
    <script src="~/FM/js/main.js"></script>
</body><!-- This templates was made by Colorlib (https://colorlib.com) -->
