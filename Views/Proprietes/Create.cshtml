@model GestionIMM.Models.Propriete

@{
    ViewData["Title"] = "Create";
}

<!-- Include Bootstrap CSS -->
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">

<style>
    body {
        background-color: #FBF9F1; /* Background color */
    }

    .btn-custom {
        background-color: #92C7CF; /* Button color */
        border-color: #92C7CF;
    }

        .btn-custom:hover {
            background-color: #7DA8AF; /* Button hover color */
            border-color: #7DA8AF;
        }

    .link-custom {
        color: #92C7CF; /* Link color */
    }

    .form-row {
        margin-bottom: 20px; /* Space between rows */
    }

    .form-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .form-content .form-items {
        background-color: #FBF9F1; /* Form background color */
        border-radius: 10px;
        border: 3px solid #E5E1DA; /* Form border */
        padding: 20px;
        margin-bottom: 20px;
        width: 80%; /* Form width */
        margin: auto;
        margin-top: 30px;
    }
</style>

<h1>Create Propriete</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <div class="form-content">
            <div class="form-items">
                <form method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <!-- Form fields for Propriete -->
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="Type" class="control-label"></label>
                            <input asp-for="Type" class="form-control" />
                            <span asp-validation-for="Type" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Taille" class="control-label"></label>
                            <input asp-for="Taille" class="form-control" />
                            <span asp-validation-for="Taille" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="Emplacement" class="control-label"></label>
                            <input asp-for="Emplacement" class="form-control" />
                            <span asp-validation-for="Emplacement" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Caracteristiques" class="control-label"></label>
                            <input asp-for="Caracteristiques" class="form-control" />
                            <span asp-validation-for="Caracteristiques" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="Image" class="control-label"></label>
                            <input asp-for="Image" type="file" class="form-control" accept="image/*" name="uploadimage" id="uploadimage" />
                        </div>
                    </div>

                    <div class="form-footer">
                        <a asp-action="Index" class="link-custom">Back to List</a>
                        <input type="submit" value="Create" class="btn btn-custom" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index" class="link-custom">Back to List</a>
</div>
