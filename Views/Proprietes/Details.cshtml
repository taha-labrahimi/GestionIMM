@model GestionIMM.Models.Propriete

@{
    ViewData["Title"] = "Details";
}

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>RegistrationForm_v6 by Colorlib</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<!-- MATERIAL DESIGN ICONIC FONT -->
	<link rel="stylesheet" href="~/FM/fonts/material-design-iconic-font/css/material-design-iconic-font.min.css">

	<!-- STYLE CSS -->
	<link rel="stylesheet" href="~/FM/css/style.css">
</head>

<body>

	<div class="wrapper">
		<div class="inner">
			<div class="image-holder">
				<img src="~/FM/images/bg12.jpg" alt="">
			</div>
			<form method="post" enctype="multipart/form-data">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>

				<!-- Row for Nom and Prenom -->
				<div class="form-row">
					<input asp-for="Type" class="form-control" placeholder="Propriete Name" readonly/>
					<span asp-validation-for="Type" class="text-danger"></span>
					<input asp-for="Taille" class="form-control" placeholder="Propriete Size" readonly />
					<span asp-validation-for="Taille" class="text-danger"></span>
				</div> <br /><br />

				<!-- Other form fields -->
				<div class="form-row">
					<input asp-for="Emplacement" class="form-control" placeholder="Adresse" readonly />
					<span asp-validation-for="Emplacement" class="text-danger"></span>
					<input asp-for="Caracteristiques" class="form-control" placeholder="Characteristic" readonly />
					<span asp-validation-for="Caracteristiques" class="text-danger"></span>
				</div>
				<br /><br />

                <div class="form-row">
                        <label >Image:</label>
                        @if (Model.Image != null)
                        {
                            <img src="@Url.Content("~/images/" + Model.Image)" alt="Image de la propriété" style="max-width: 200px; max-height: 200px;" />
                        }
                        else
                        {
                            <input type="text" readonly class="form-control-plaintext" value="Aucune image disponible.">
                        }
                </div>
				
				<!-- Other form fields -->
				<!-- ... (rest of your form fields) -->

				<button style="background:  #161A30; color: white;" asp-action="Index">
					Back
					<i class="zmdi zmdi-long-arrow-right"></i>
				</button>
			</form>


		</div>
	</div>

	<script src="~/FM/js/jquery-3.3.1.min.js"></script>
	<script src="~/FM/js/main.js"></script>
</body><!-- This templates was made by Colorlib (https://colorlib.com) -->
</html>

