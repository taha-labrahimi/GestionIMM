@model GestionIMM.Models.Propriete

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Propriete</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Taille" class="control-label"></label>
                <input asp-for="Taille" class="form-control" />
                <span asp-validation-for="Taille" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Emplacement" class="control-label"></label>
                <input asp-for="Emplacement" class="form-control" />
                <span asp-validation-for="Emplacement" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Caracteristiques" class="control-label"></label>
                <input asp-for="Caracteristiques" class="form-control" />
                <span asp-validation-for="Caracteristiques" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                @if (Model.Image != null)
                {
                    <div>
                        <strong>Image actuelle :</strong>
                        <img src="@Url.Content("~/images/" + Model.Image)" style="max-width: 200px; max-height: 200px;" />
                    </div>
                }
                <input type="file" class="form-control" accept="image/*" name="uploadimage" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

