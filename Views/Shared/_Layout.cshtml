<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GestionIMM</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GestionIMM.styles.css" asp-append-version="true" />

    <style>
        .sidebar {
            height: 100%;
            width: 250px;
            position: fixed;
            z-index: 1;
            top: 0;
            left: 0;
            background-color: #343a40;
            color: white;
            overflow-x: hidden;
            padding-top: 20px;
        }

            .sidebar a {
                padding: 10px 15px;
                text-decoration: none;
                font-size: 18px;
                color: white;
                display: block;
            }

                .sidebar a:hover {
                    color: #f8f9fa;
                    background-color: #007bff;
                }

        .main-content {
            margin-left: 250px;
            padding: 20px;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <div class="py-2 px-3 mb-4 border-bottom">
            <span class="h5 mb-0">GestionIMM</span>
        </div>
        <a asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-house-door"></i> Home</a>
        <a asp-area="" asp-controller="Clients" asp-action="Index"><i class="bi bi-people"></i> Clients</a>
        <a asp-area="" asp-controller="Proprietes" asp-action="Index"><i class="bi bi-building"></i> Proprietes</a>
        <a asp-area="" asp-controller="TransactionVentes" asp-action="Index"><i class="bi bi-currency-exchange"></i> Transaction Ventes</a>
        <a asp-area="" asp-controller="ContratLocations" asp-action="Index"><i class="bi bi-file-earmark-text"></i> Contrat Locations</a>
        <a asp-area="" asp-controller="Utilisateurs" asp-action="Index"><i class="bi bi-person-badge"></i> Utilisateurs</a>
    </div>

    <div class="main-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>

        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2024 - GestionIMM
            </div>
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
